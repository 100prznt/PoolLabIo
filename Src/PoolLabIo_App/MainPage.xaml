<Page
    x:Class="Rca.PoolLabIoApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="310" Width="274">

    <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
        <Button x:Name="btn_Start" Content="Verbinden" HorizontalAlignment="Left" Margin="20,17,0,0" VerticalAlignment="Top" Click="Btn_Start_Click" Width="233"/>
        <Button x:Name="btn_Read" Content="Lesen" HorizontalAlignment="Left" Margin="20,215,0,0" VerticalAlignment="Top" Click="Btn_Read_Click" Width="75"/>
        <Button x:Name="btn_Send" Content="Senden" HorizontalAlignment="Left" Margin="20,178,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Send_Click"/>
