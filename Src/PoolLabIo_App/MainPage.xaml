        <Button x:Name="btn_SetTime" Content="Zeit einstellen" HorizontalAlignment="Left" Margin="20,96,0,0" VerticalAlignment="Top" Click="Btn_SetTime_Click"/>
        <Button x:Name="btn_Restart" Content="Neustart" HorizontalAlignment="Left" Margin="20,133,0,0" VerticalAlignment="Top" Click="Btn_Restart_Click" Width="113"/>
        <Button x:Name="btn_ShutDown" Content="Ausschalten" HorizontalAlignment="Left" Margin="140,59,0,0" VerticalAlignment="Top" Click="Btn_ShutDown_Click" Width="113"/>
        <Button x:Name="btn_GetMeas" Content="Messdaten" HorizontalAlignment="Left" Margin="140,96,0,0" VerticalAlignment="Top" Click="Btn_GetMeas_Click" Width="113"/>
        <Button Content="Information" HorizontalAlignment="Left" Margin="20,59,0,0" VerticalAlignment="Top" Width="113" Click="Button_Click"/>
        <Button Content="Löschen" HorizontalAlignment="Left" Margin="140,133,0,0" VerticalAlignment="Top" Width="113"/>
    </Grid>
</Page>
